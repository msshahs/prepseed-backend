div(style="margin:0;background: #f4f5f6;font-family:'Clear Sans',sans-serif;padding: 20px;")
  div(style='background: #fff;\
  margin: 0 auto;\
  width: 550px;\
  padding: 16px 16px;\
  border-top: solid 3px #2196f3;text-align:center;')
    table(cellspacing=0 cellpadding=0 border=0 width="100%")
      tr
        td(valign="top")
          div(style='text-align:center')
            a(href="https://www.prepseed.com")
              img(src='https://static.prepseed.com/brand/prepseed/logo.png' style='height:32px')
      tr
        td
          div
            p(style="padding: 10px 20%;font-size:24px;text-transform:uppercase;letter-spacing:1px;font-weight:600;line-height:1.43;color:#323232;")
              | Thank you for registering with us
      tr
        td
          div
            p(style='color: #787878')
              | Hey #{name},
      tr
        td
          div(style='color: #787878;padding: 10px 10%;text-align:left;')
            p
              | We have received your payment of 
              if type==="combo" 
                b INR #{amount}
                |  for the combo pack 
              else
                b INR #{amount}
                |  for the course
              b  #{courseName}.
              if type=="combo"
                div This pack includes the following course(s)/session(s)
                ul
                  each c in courses
                    li= c.title
              else
                br
              br
              |   We will be in touch with you soon.
      tr
        td
          div
            p(style="font-size:12px;color:#bababa;font-weight:400;margin:30px 0 0")
              | If you have any query, please reach out to us at 
              a(href='mailto:neel@prepseed.com') neel@prepseed.com
              |  or 
              a(href='tel:8128005852') 81280-05852
